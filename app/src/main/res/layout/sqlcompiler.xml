<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".sqlcompiler">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/primary_blue"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="30dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sql_compiler_title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
               />

        </LinearLayout>

        <!-- Sample Table Title -->
        <TextView
            android:id="@+id/sampleTableTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Table: `users`"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Sample Table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TableLayout
                android:id="@+id/sampleTableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- Table Header -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TableHeaderStyle"
                        android:text="id" />

                    <TextView
                        style="@style/TableHeaderStyle"
                        android:text="name" />

                    <TextView
                        style="@style/TableHeaderStyle"
                        android:text="age" />

                </TableRow>

                <!-- Sample Data Rows -->
                <TableRow>
                    <TextView
                        style="@style/TableCellStyle"
                        android:text="1" />
                    <TextView
                        style="@style/TableCellStyle"
                        android:text="Jerico" />
                    <TextView
                        style="@style/TableCellStyle"
                        android:text="20" />
                </TableRow>

                <TableRow>
                    <TextView
                        style="@style/TableCellStyle"
                        android:text="2" />
                    <TextView
                        style="@style/TableCellStyle"
                        android:text="John" />
                    <TextView
                        style="@style/TableCellStyle"
                        android:text="22" />
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>

        <!-- SQL Query Input -->
        <EditText
            android:id="@+id/queryEditText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="@string/query_hint"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            style="@style/QueryEditTextStyle"
            android:layout_marginBottom="16dp"
            android:text="SELECT * FROM users;" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/runButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/run_query"
                android:drawableStart="@drawable/ic_play"
                android:drawablePadding="8dp"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@color/success_green" />

            <Spinner
                android:id="@+id/testCaseSpinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="16dp" />

        <!-- Expected Output Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/expected_output"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TableLayout
                android:id="@+id/expectedTableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*" />

        </HorizontalScrollView>

        <!-- Your Output Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_output"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TableLayout
                android:id="@+id/resultTableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*" />

        </HorizontalScrollView>

        <!-- Result Message -->
        <TextView
            android:id="@+id/resultMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/correct_output"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/success_green"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="16dp" />

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reset"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@color/gray" />

            <Button
                android:id="@+id/viewSolutionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view_solution"
                android:layout_marginStart="8dp"
                app:backgroundTint="@color/primary_blue" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>