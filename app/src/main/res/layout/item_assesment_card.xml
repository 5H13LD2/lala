<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="@dimen/spacing_sm"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/modern_border"
    android:backgroundTint="@color/modern_card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Header with colored accent bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/modern_button_practice" />

            <TextView
                android:id="@+id/textAssessmentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fix the Loop"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/modern_text_primary"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_sm"
            android:background="@drawable/modern_icon_background"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difficulty: "
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/modern_text_secondary" />

            <TextView
                android:id="@+id/textDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textColor="@color/modern_success"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:background="@color/modern_border" />

        <TextView
            android:id="@+id/textCodePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='for i in range(5): print(f"Line : Hello")'
            android:textSize="@dimen/text_size_caption"
            android:textColor="@color/modern_text_secondary"
            android:fontFamily="monospace"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
