<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title and Difficulty -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvProblemTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Problem Title"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textColor="#FFA500"
                android:background="@drawable/modern_card_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Status Tags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvSolved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ Solved"
                android:textColor="#4CAF50"
                android:background="@drawable/check_mark_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvRevision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŸ³ Revision"
                android:textColor="#FF9800"
                android:background="@drawable/xp_progress_bar_fill"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Problem Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

        <!-- Examples -->
        <TextView
            android:id="@+id/tvExamples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />

        <!-- Hint Button -->
        <Button
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="ðŸ’¡ Show Hint"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/modern_button_secondary"
            android:paddingHorizontal="24dp" />

        <!-- Hints Container (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/hintsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/modern_card_background"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Hints"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvHints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:lineSpacingExtra="6dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>