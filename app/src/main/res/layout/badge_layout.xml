<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- outer ring -->
    <ImageView
        android:id="@+id/badge_outer"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/badge_outer" />

    <!-- middle ring -->
    <ImageView
        android:id="@+id/badge_middle"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:src="@drawable/badge_middle" />

    <!-- inner circle with logo -->
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/badge_inner">

        <ImageView
            android:layout_width="141dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:src="@drawable/python_logo" />
    </FrameLayout>

    <!-- check mark -->
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:translationX="-8dp"
        android:translationY="8dp"
        android:src="@drawable/check_mark_badge" />

</FrameLayout>
