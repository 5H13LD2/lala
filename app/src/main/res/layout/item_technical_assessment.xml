<?xml version="1.0" encoding="utf-8"?>
<!-- ========================================== -->
<!-- TECHNICAL ASSESSMENT ITEM CARD - Modern Design -->
<!-- ========================================== -->
<!--
    Customization Options:
    CARD:
    - cardCornerRadius: Change roundness (current: 20dp)
    - cardElevation: Adjust shadow depth (current: 6dp)
    - layout_margin: Adjust spacing between items (current: 12dp horizontal, 8dp vertical)
    - cardBackgroundColor: Change card color (current: #FFFFFF)

    ICON:
    - Icon size: Change width/height (current: 64dp)
    - Icon background: MaterialCardView with brand_blue (current: 64dp card, 14dp corners)
    - Icon tint: Change via app:tint (current: #FFFFFF)

    TITLE & CATEGORY:
    - Title size: Adjust textSize (current: 18sp)
    - Title color: Change textColor (current: modern_text_primary)
    - Category size: Adjust textSize (current: 13sp)
    - Category color: Change textColor (current: modern_text_secondary)

    DIFFICULTY BADGE:
    - Badge size: Adjust textSize (current: 12sp)
    - Badge colors: Set via difficulty (Easy/Medium/Hard)
    - Badge roundness: Change via @drawable/difficulty_badge

    STATUS TEXT:
    - Status size: Adjust textSize (current: 14sp)
    - Status color: Changes based on availability (brand_blue/modern_text_secondary)
-->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assessmentCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ========================================== -->
        <!-- HEADER SECTION - Icon, Title, Difficulty -->
        <!-- ========================================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Assessment Icon Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/brand_blue">

                <ImageView
                    android:id="@+id/assessmentIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/book"
                    app:tint="#FFFFFF" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Title and Category -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/assessmentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment Title"
                    android:textColor="@color/modern_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/assessmentCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Category"
                    android:textColor="@color/modern_text_secondary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Difficulty & Lock Badge Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <!-- Lock Icon (for locked assessments) -->
                <ImageView
                    android:id="@+id/lockIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_lock"
                    android:visibility="gone"
                    app:tint="@color/modern_text_secondary" />

                <!-- Difficulty Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/success_green">

                    <TextView
                        android:id="@+id/assessmentDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <!-- ========================================== -->
        <!-- DIVIDER LINE -->
        <!-- ========================================== -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/modern_border"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- ========================================== -->
        <!-- STATUS TEXT - Shows availability -->
        <!-- ========================================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textColor="@color/modern_text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/assessmentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="@color/brand_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
