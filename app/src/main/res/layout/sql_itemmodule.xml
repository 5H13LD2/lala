<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <!-- Parent LinearLayout containing all content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Module Title and Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Module Title and Description Layout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sqlTvModuleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Module 1 title, Fundamentals of SQL"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Module 1: Fundamentals of SQL" />

                <FrameLayout
                    android:id="@+id/sqlModuleHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/sqlTvModuleDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:contentDescription="Module description: Learn the basics of SQL programming"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        tools:text="Learn the basics of SQL programming" />
                </FrameLayout>
            </LinearLayout>

            <!-- Expand icon -->
            <ImageView
                android:id="@+id/sqlIvModuleExpand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Expand module icon"
                android:src="@drawable/ic_expand_more"
                app:tint="@color/primary" />
        </LinearLayout>

        <!-- Quiz Score TextView -->
        <TextView
            android:id="@+id/sqlTvQuizScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:visibility="gone"
            android:textColor="@color/success_green"
            tools:text="Score: 8/10"
            tools:visibility="visible"/>

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/sqlModuleProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:indicatorColor="@color/primary"
            app:trackColor="@color/light_blue" />

        <!-- RecyclerView for Lessons -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sqlRvLessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_background"
            android:contentDescription="List of lessons"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Quiz Button -->
        <Button
            android:id="@+id/sqlBtnTakeQuizzes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Take Quiz"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
