<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/achievement_card_gradient"
        android:padding="32dp"
        android:gravity="center">

        <!-- Trophy Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/trophy"
            app:tint="#FFD700"
            android:layout_marginBottom="16dp" />

        <!-- Achievement Unlocked Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement Unlocked!"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Achievement Title -->
        <TextView
            android:id="@+id/achievementTitleDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginner Explorer"
            android:textColor="#FFD700"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Achievement Description -->
        <TextView
            android:id="@+id/achievementDescriptionDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reached 500 XP milestone!"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Badge Earned Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/profile_edit_button"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/star_on"
                app:tint="#CD7F32"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/badgeEarnedTextDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bronze Badge Earned"
                android:textColor="@color/brand_blue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Reward Message -->
        <TextView
            android:id="@+id/rewardMessageDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You've entered the leaderboard! Keep learning!"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_marginBottom="24dp" />

        <!-- Close Button -->
        <Button
            android:id="@+id/closeDialogBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awesome!"
            android:textAllCaps="false"
            android:textColor="@color/brand_dark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="@drawable/profile_leaderboard_button" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
