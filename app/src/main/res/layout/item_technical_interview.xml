<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewTopic"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/spacing_sm"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/modern_border"
    android:backgroundTint="@color/modern_card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md"
        android:gravity="center">

        <!-- Icon or badge at top -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/modern_button_flashcard" />

        <TextView
            android:id="@+id/textTopicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/modern_text_primary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/textTopicDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty"
            android:textSize="@dimen/text_size_caption"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_sm"
            android:textColor="@color/modern_text_secondary"
            android:background="@drawable/modern_icon_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>