<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF">

        <!-- Achievement Icon -->
        <ImageView
            android:id="@+id/achievementIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/star_on"
            android:scaleType="centerInside"
            app:tint="#FFD700"
            android:layout_marginEnd="16dp" />

        <!-- Achievement Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/achievementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Steps"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/achievementDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reach Level 1"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/achievementReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Lock/Unlock Status -->
        <ImageView
            android:id="@+id/lockIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_lock_lock"
            app:tint="#BDBDBD"
            android:layout_marginStart="12dp" />

        <!-- XP Required Text -->
        <TextView
            android:id="@+id/xpRequiredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 XP"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
