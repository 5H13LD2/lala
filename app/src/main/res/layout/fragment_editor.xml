<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E">

    <!-- Top Section (20%) - Controls and Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:background="#252526"
        android:padding="12dp">

        <!-- Code/Output Toggle -->
        <LinearLayout
            android:id="@+id/toggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1E1E1E"
            android:padding="2dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/btnCodeTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Code Editor"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/modern_button_primary"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="2dp" />

            <TextView
                android:id="@+id/btnOutputTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Console Output"
                android:textColor="#AAAAAA"
                android:gravity="center"
                android:background="#1E1E1E"
                android:padding="12dp"
                android:textSize="14sp"
                android:layout_margin="2dp" />
        </LinearLayout>

        <!-- Run and Submit Buttons -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnRun"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="▷ RUN CODE"
                android:textColor="#FFFFFF"
                android:background="@drawable/modern_button_secondary"
                android:layout_marginEnd="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:elevation="3dp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="✓ SUBMIT"
                android:textColor="#FFFFFF"
                android:background="@drawable/modern_button_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:elevation="3dp" />
        </LinearLayout>

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Write your solution and test it before submitting"
            android:textColor="#888888"
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Bottom Section (80%) - Editor/Output Display -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <!-- Code Editor Container with Line Numbers -->
        <androidx.cardview.widget.CardView
            android:id="@+id/editorCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#1E1E1E">

                    <!-- Line Numbers Column -->
                    <ScrollView
                        android:id="@+id/svLineNumbers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#252526"
                        android:scrollbars="none"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/tvLineNumbers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#252526"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textColor="#858585"
                            android:fontFamily="monospace"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:gravity="end"
                            android:minWidth="40dp"
                            android:text="1" />
                    </ScrollView>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#3C3C3C" />

                    <!-- Code Editor -->
                    <ScrollView
                        android:id="@+id/svCodeEditor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#1E1E1E"
                        android:fillViewport="true">

                        <EditText
                            android:id="@+id/etCodeEditor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#1E1E1E"
                            android:paddingStart="12dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:textColor="#D4D4D4"
                            android:textColorHint="#6A9955"
                            android:hint="// Write your code here..."
                            android:fontFamily="monospace"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:gravity="start|top"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:scrollbars="none"
                            android:minWidth="300dp"
                            android:minHeight="200dp"
                            android:textCursorDrawable="@null"
                            android:importantForAutofill="no" />
                    </ScrollView>

                </LinearLayout>
            </HorizontalScrollView>

        </androidx.cardview.widget.CardView>

        <!-- Output Display (Initially Hidden) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/outputCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <ScrollView
                android:id="@+id/svOutput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1E1E1E"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#CCCCCC"
                    android:fontFamily="monospace"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:text="Click 'Run' to see output..." />
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>