<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SQLCOMPILER.SQLChallengeActivity">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/primary_blue"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SQL Challenge"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Progress Bar (Loading) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Challenge Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Challenge Title -->
                <TextView
                    android:id="@+id/challengeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenge Title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <!-- Challenge Metadata (Difficulty & Topic) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/challengeDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:background="@drawable/rounded_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/challengeTopic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELECT Basics"
                        android:textSize="14sp"
                        android:textColor="@color/primary_blue"
                        android:padding="4dp"
                        android:background="@drawable/rounded_background" />

                </LinearLayout>

                <!-- Challenge Description -->
                <TextView
                    android:id="@+id/challengeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenge description goes here..."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sample Tables Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Tables"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/sampleTablesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Sample tables will be dynamically added here -->
            </LinearLayout>

        </HorizontalScrollView>

        <!-- Expected Output Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expected Output"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TableLayout
                android:id="@+id/expectedTableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <!-- Expected output will be dynamically added here -->
            </TableLayout>

        </HorizontalScrollView>

        <!-- SQL Query Input Section (Code Editor Style) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your SQL Query"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <!-- Code Editor Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#1E1E1E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Editor Header (like IDE toolbar) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#2D2D30"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="query.sql"
                        android:textColor="#CCCCCC"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:drawableStart="@android:drawable/ic_menu_edit"
                        android:drawableTint="#569CD6"
                        android:drawablePadding="8dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SQL"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <!-- Editor with Line Numbers -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#1E1E1E">

                        <!-- Line Numbers -->
                        <TextView
                            android:id="@+id/lineNumbers"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="#252526"
                            android:padding="8dp"
                            android:text="1\n2\n3\n4\n5"
                            android:textColor="#858585"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:gravity="end"
                            android:lineSpacingExtra="4dp" />

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#3E3E42" />

                        <!-- Code Editor -->
                        <EditText
                            android:id="@+id/queryEditText"
                            android:layout_width="wrap_content"
                            android:minWidth="300dp"
                            android:layout_height="wrap_content"
                            android:minHeight="150dp"
                            android:hint="-- Enter your SQL query here...\nSELECT * FROM table_name;"
                            android:textColorHint="#6A9955"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:padding="8dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="monospace"
                            android:textSize="13sp"
                            android:textColor="#D4D4D4"
                            android:lineSpacingExtra="4dp"
                            android:scrollbars="vertical"
                            android:importantForAutofill="no" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/runButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Run Query"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/hintButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hint"
                android:textColor="@color/primary_blue"
                android:background="@drawable/button_outline"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textColor="@color/primary_blue"
                android:background="@drawable/button_outline" />

        </LinearLayout>

        <Button
            android:id="@+id/viewSolutionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Solution"
            android:textColor="@color/primary_blue"
            android:background="@drawable/button_outline"
            android:layout_marginBottom="16dp" />

        <!-- Result Message -->
        <TextView
            android:id="@+id/resultMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result message appears here"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Your Result Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Result"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TableLayout
                android:id="@+id/resultTableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <!-- Query results will be dynamically added here -->
            </TableLayout>

        </HorizontalScrollView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
