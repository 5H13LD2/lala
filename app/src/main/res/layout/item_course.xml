<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Modern Course Icon with Gradient Background -->
        <androidx.cardview.widget.CardView
            android:id="@+id/courseIconCard"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/courseImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/modern_course_icon_bg"
                android:padding="18dp"
                android:scaleType="centerInside"
                android:src="@drawable/logo2"
                android:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <!-- Course Title -->
        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="Course Name"
            android:textColor="#1A1A2E"
            android:textSize="19sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/courseIconCard"
            app:layout_constraintTop_toTopOf="@+id/courseIconCard" />

        <!-- Course Subtitle/Description -->
        <TextView
            android:id="@+id/courseSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Continue your learning journey"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/courseIconCard"
            app:layout_constraintTop_toBottomOf="@+id/courseTitle" />

        <!-- Continue Learning Button with Gradient -->
        <Button
            android:id="@+id/btnContinueLearning"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/modern_button_primary"
            android:elevation="2dp"
            android:fontFamily="sans-serif-medium"
            android:stateListAnimator="@null"
            android:text="Continue Learning â†’"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseIconCard" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnContinueLearning">

            <!-- Practice Button with Icon -->
            <LinearLayout
                android:id="@+id/btnPractice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/modern_button_practice"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="14dp"
                android:paddingTop="16dp"
                android:paddingEnd="14dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/practiceIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_practice_modern"
                    android:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/practiceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Practice"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Flashcard/Reviewer Button with Icon -->
            <LinearLayout
                android:id="@+id/btnFlashcard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/modern_button_flashcard"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="14dp"
                android:paddingTop="16dp"
                android:paddingEnd="14dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/flashcardIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_flashcard_modern"
                    android:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/flashcardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Reviewer"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
