<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Logo Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logoCard"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="200dp"
        app:cardElevation="14dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/titleGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Logo Image -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/logo"
                android:alpha="0.98" />

            <!-- Circular highlight/stroke overlay -->
            <View
                android:id="@+id/circleHighlight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_highlight"
                android:clickable="false" />

            <!-- Soft inner shadow layer -->
            <View
                android:layout_width="308dp"
                android:layout_height="match_parent"
                android:background="@drawable/inner_shadow"
                android:clickable="false" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Title and tagline under the logo -->
    <LinearLayout
        android:id="@+id/titleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/logoCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TECHLAUNCH"
            android:textAllCaps="true"
            android:textSize="28sp"
            android:letterSpacing="0.08"
            android:textStyle="bold"
            android:textColor="#FFD24F"
            android:shadowColor="#44000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Innovate. Empower. Connect."
            android:textSize="12sp"
            android:textColor="#d0cfcf"
            android:layout_marginTop="6dp"
            android:shadowColor="#22000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
