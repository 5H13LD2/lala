<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true"
    android:background="@drawable/profile_gradient_background"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md"
        android:paddingTop="@dimen/spacing_xl">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            tools:context=".ProfileMainActivity5.ProfileMainActivity5">

            <!-- Back Button with Modern Circle Background -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/backButtonCard"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:src="@drawable/ic_back"
                    app:tint="@color/modern_primary" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Futuristic Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/backButtonCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_card_gradient"
                    android:padding="28dp"
                    android:paddingTop="32dp"
                    android:paddingBottom="32dp">

                    <!-- Profile Image with Upload Overlay -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/profileImageCard"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="70dp"
                        app:cardElevation="12dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user" />

                            <!-- Upload Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#80000000"
                                android:alpha="0" />

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Camera Icon Button for Upload -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnUploadPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_camera"
                        app:backgroundTint="@color/modern_accent"
                        app:tint="#FFFFFF"
                        app:fabSize="mini"
                        app:elevation="6dp"
                        app:layout_constraintEnd_toEndOf="@id/profileImageCard"
                        app:layout_constraintBottom_toBottomOf="@id/profileImageCard"
                        android:layout_marginEnd="-4dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Username -->
                    <TextView
                        android:id="@+id/textUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@user123"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileImageCard" />

                    <!-- User Badge Display -->
                    <TextView
                        android:id="@+id/userBadgeDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ðŸ¥‰ Bronze Badge"
                        android:textColor="#CD7F32"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/difficulty_badge"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textUsername" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/textEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="user@example.com"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userBadgeDisplay" />

                    <!-- Edit Profile Button -->
                    <Button
                        android:id="@+id/btnEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Edit Profile"
                        android:textAllCaps="false"
                        android:textColor="@color/brand_blue"
                        android:textStyle="bold"
                        android:paddingStart="28dp"
                        android:paddingEnd="28dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="@drawable/profile_edit_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textEmail" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stats Cards Grid -->

            <!-- Achievement Card -->

            <LinearLayout
                android:id="@+id/statsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/profileCard"
                tools:layout_editor_absoluteX="0dp">

                <!-- XP Stat Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stat_card_gradient_1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFD700" />

                        <TextView
                            android:id="@+id/textXpValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="Level 0"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Total XP"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Courses Stat Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/coursesStatCard"
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stat_card_gradient_2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/book"
                            app:tint="@color/brand_blue" />

                        <TextView
                            android:id="@+id/textCoursesValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-black"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Courses"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Quizzes Stat Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/quizzesStatCard"
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stat_card_gradient_3"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_quiz"
                            app:tint="@color/brand_mint" />

                        <TextView
                            android:id="@+id/textExercisesValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-black"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Quizzes"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/achievementCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/statsLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/achievement_card_gradient"
                    android:padding="28dp">

                    <ImageView
                        android:id="@+id/achievementIcon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/trophy"
                        app:tint="#FFD700"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/achievementTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Reach 500 XP"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/achievementIcon"
                        app:layout_constraintTop_toTopOf="@id/achievementIcon" />

                    <TextView
                        android:id="@+id/achievementSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Unlock Leaderboard Access"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/achievementIcon"
                        app:layout_constraintTop_toBottomOf="@id/achievementTitle" />

                    <!-- XP Progress Section with Checkpoints -->
                    <LinearLayout
                        android:id="@+id/xpProgressSection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/achievementIcon">

                        <!-- Level Info Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/currentLevelTextProfile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Level 1"
                                android:textSize="11sp"
                                android:textColor="#FFD700"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/xpProgressTextProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200/500 XP"
                                android:textSize="11sp"
                                android:textColor="#CCFFFFFF" />

                            <TextView
                                android:id="@+id/nextLevelTextProfile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Level 2"
                                android:textSize="11sp"
                                android:textColor="#FFD700"
                                android:textStyle="bold"
                                android:gravity="end" />
                        </LinearLayout>

                        <!-- Progress Bar Container with Checkpoints -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="16dp">

                            <!-- Background Progress Bar -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/xp_progress_bar_background" />

                            <!-- Filled Progress Bar -->
                            <View
                                android:id="@+id/xpProgressBar"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/xp_progress_bar_fill" />

                            <!-- Checkpoint Markers Container -->
                            <LinearLayout
                                android:id="@+id/checkpointMarkersContainer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical" />
                        </FrameLayout>

                        <!-- Checkpoint Achievement Text -->
                        <TextView
                            android:id="@+id/checkpointText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ† Level Checkpoint Reached!"
                            android:textSize="12sp"
                            android:textColor="#FFD700"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="200 / 500 XP"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/xpProgressSection" />

                    <Button
                        android:id="@+id/Leaderboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="View Leaderboard"
                        android:textAllCaps="false"
                        android:textColor="@color/brand_dark"
                        android:textStyle="bold"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="@drawable/profile_leaderboard_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progressText" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Achievements Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/achievementsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/achievementCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/star_on"
                            app:tint="#FFD700" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="My Achievements"
                            android:textColor="@color/modern_text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/achievementsCountBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/5"
                            android:textColor="#FFD700"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/difficulty_badge"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp" />
                    </LinearLayout>

                    <!-- Achievement Unlocked Section -->
                    <LinearLayout
                        android:id="@+id/achievementUnlockedSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:background="@drawable/achievement_card_gradient"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Achievement Unlocked!"
                            android:textColor="#FFD700"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/latestAchievementBadgeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silver Badge"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/achievementBadgesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:minHeight="100dp" />

                    <TextView
                        android:id="@+id/noAchievementsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Complete quizzes and challenges to unlock achievements!"
                        android:textColor="@color/modern_text_secondary"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:padding="24dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Technical Assessments Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/coursesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/achievementsCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/book"
                            app:tint="@color/modern_accent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Technical Assessments"
                            android:textColor="@color/modern_text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/coursesCountBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/modern_accent"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/difficulty_badge"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/enrolledCoursesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:minHeight="100dp" />

                    <TextView
                        android:id="@+id/viewAllAssessmentsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:text="View All"
                        android:textColor="@color/modern_accent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/noCoursesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="No assessments taken yet. Start practicing!"
                        android:textColor="@color/modern_text_secondary"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:padding="24dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quiz History Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quizHistoryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/coursesCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_quiz"
                            app:tint="@color/modern_accent_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Recent Quiz Results"
                            android:textColor="@color/modern_text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quizCountBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/modern_accent_secondary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/difficulty_badge"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/quizHistoryRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:minHeight="100dp" />

                    <TextView
                        android:id="@+id/noQuizzesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="No quiz attempts yet. Take your first quiz!"
                        android:textColor="@color/modern_text_secondary"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:padding="24dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/viewAllQuizzesBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="View All"
                        android:textAllCaps="false"
                        android:textColor="@color/brand_mauve"
                        android:textStyle="bold"
                        android:background="@drawable/profile_edit_button"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

<!-- Bottom Navigation View -->
<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNavigationView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>