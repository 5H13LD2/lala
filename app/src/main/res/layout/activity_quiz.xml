<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_gradient_background"
    tools:context=".quiz.ActivityMainQuiz">

    <!-- Back Button with Modern Card Background -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/backButtonCard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/brand_blue" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Timer and Question Counter Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        android:backgroundTint="@color/brand_blue"
        app:layout_constraintTop_toBottomOf="@+id/backButtonCard">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/question_counter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Question 1 of 20"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00"
            android:textColor="@color/brand_teal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/timer_background"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Time's Up Message (Initially Hidden) -->
    <TextView
        android:id="@+id/time_up_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time's up!"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Question Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/next_button"
        app:layout_constraintTop_toBottomOf="@+id/header_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Question Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF">

            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Which of the following is NOT a built-in data type in Python?"
                android:textColor="@color/modern_text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="4dp" />
            </com.google.android.material.card.MaterialCardView>

            <RadioGroup
                android:id="@+id/answer_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/option_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/option_background"
                    android:padding="12dp"
                    android:text="List"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/option_background"
                    android:padding="12dp"
                    android:text="Dictionary"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/option_background"
                    android:padding="12dp"
                    android:text="Array"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/option_background"
                    android:padding="12dp"
                    android:text="Tuple"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <!-- ========================================== -->
    <!-- NEXT BUTTON - Customize position and style below -->
    <!-- ========================================== -->
    <!--
        Customization Options:
        - layout_marginBottom: Adjust to move button higher/lower (current: 40dp)
        - layout_height: Change button height (current: 56dp)
        - backgroundTint: Change button color (current: @color/brand_blue)
        - textSize: Adjust text size (current: 18sp)
        - cornerRadius: Change roundness (current: 16dp)
        - elevation: Adjust shadow depth (current: 4dp)
    -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/brand_blue"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="16dp"
        app:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>