<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_gradient_background">

    <!-- ScrollView for the content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="56dp"
            android:paddingBottom="24dp">

            <!-- Top Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="28dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="#FFFFFF">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/modern_primary"
                        android:contentDescription="Back button" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Your Progress"
                    android:textColor="@color/modern_text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/growth"
                    app:tint="@color/brand_mint" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Weekly Target Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/weeklyTargetCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvWeeklyTargetTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Weekly Target"
                        android:textColor="@color/modern_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Date Range -->
                    <TextView
                        android:id="@+id/tvDateRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="17 Nov - 23 Nov"
                        android:textColor="@color/modern_text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvWeeklyTargetTitle" />

                    <!-- Achievement Status -->
                    <TextView
                        android:id="@+id/tvAchievement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="0/7"
                        android:textColor="@color/brand_mint"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDateRange" />

                    <TextView
                        android:id="@+id/tvAchievedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="Achieved"
                        android:textColor="@color/modern_text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvAchievement"
                        app:layout_constraintStart_toEndOf="@id/tvAchievement" />

                    <!-- Weekly Progress Circles -->
                    <LinearLayout
                        android:id="@+id/weeklyProgressLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvAchievement">

                        <!-- Monday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/circleMonday"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_inactive" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="MON"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Tuesday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/circleTuesday"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_inactive" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="TUE"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Wednesday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/circleWednesday"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_inactive" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="WED"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Thursday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/circleThursday"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_inactive" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="THURS"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Friday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/circleFriday"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_inactive" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="FRI"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Saturday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/circleSaturday"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_inactive" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="SAT"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Sunday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/circleSunday"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_inactive" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="SUN"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Experience Points Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/experiencePointsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weeklyTargetCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvExperiencePointsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience Points"
                        android:textColor="@color/modern_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- XP Stats Container -->
                    <LinearLayout
                        android:id="@+id/xpStatsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvExperiencePointsTitle">

                        <!-- Last 30 days XP -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvXpLast30Days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 XP"
                                android:textColor="@color/modern_text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Last 30 days"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Today XP -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvXpToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 XP"
                                android:textColor="@color/modern_text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Today"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Timeline Container -->
                    <LinearLayout
                        android:id="@+id/timelineLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/xpStatsLayout">

                        <!-- Timeline dots and lines -->
                        <LinearLayout
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <!-- Top dot -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/timeline_dot_inactive" />

                            <!-- Connecting line -->
                            <View
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/modern_text_secondary"
                                android:alpha="0.3" />

                            <!-- Middle dot -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/timeline_dot_inactive" />

                            <!-- Connecting line -->
                            <View
                                android:layout_width="2dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/modern_text_secondary"
                                android:alpha="0.3" />

                            <!-- Bottom dot -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/timeline_dot_inactive" />
                        </LinearLayout>

                        <!-- Timeline labels -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <!-- Start date -->
                            <TextView
                                android:id="@+id/tvTimelineStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24 October"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="12sp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <!-- End date -->
                            <TextView
                                android:id="@+id/tvTimelineEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today"
                                android:textColor="@color/modern_text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Login Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dailyLoginCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/experiencePointsCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvDailyLoginTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Login"
                        android:textColor="@color/modern_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Duration -->
                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Past 4 months"
                        android:textColor="@color/modern_text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDailyLoginTitle" />

                    <!-- Calendar Grid -->
                    <HorizontalScrollView
                        android:id="@+id/calendarScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDuration">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- August -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="Aug"
                                    android:textColor="@color/modern_text_secondary"
                                    android:textSize="11sp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvAugust"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:itemCount="35"
                                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                    tools:listitem="@layout/item_calendar_day"
                                    tools:spanCount="7" />
                            </LinearLayout>

                            <!-- September -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="Sep"
                                    android:textColor="@color/modern_text_secondary"
                                    android:textSize="11sp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvSeptember"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:itemCount="35"
                                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                    tools:listitem="@layout/item_calendar_day"
                                    tools:spanCount="7" />
                            </LinearLayout>

                            <!-- October -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="Oct"
                                    android:textColor="@color/modern_text_secondary"
                                    android:textSize="11sp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvOctober"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:itemCount="35"
                                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                    tools:listitem="@layout/item_calendar_day"
                                    tools:spanCount="7" />
                            </LinearLayout>

                            <!-- November -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="Nov"
                                    android:textColor="@color/modern_text_secondary"
                                    android:textSize="11sp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvNovember"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:itemCount="35"
                                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                    tools:listitem="@layout/item_calendar_day"
                                    tools:spanCount="7" />
                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>