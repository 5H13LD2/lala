<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.MainActivity4">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md"
            android:paddingTop="@dimen/spacing_xl">

            <!-- Day Selector -->
            <LinearLayout
                android:id="@+id/day_selector_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_xl">

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_monday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="M"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_tuesday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="T"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_wednesday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="W"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_thursday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="TH"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_friday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="F"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_saturday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="SAT"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_sunday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="S"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Recent Course & My Library Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    android:id="@+id/textRecentCourse"
                    style="@style/TextAppearance.Lala.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Course" />

                <TextView
                    android:id="@+id/textMyLibrary"
                    style="@style/TextAppearance.Lala.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Library"
                    android:gravity="end" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                style="@style/Widget.Lala.RecyclerView.Vertical" />

            <!-- Technical Assessment Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    android:id="@+id/textTechAssessmentTitle"
                    style="@style/TextAppearance.Lala.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Technical Assessment" />

                <TextView
                    android:id="@+id/textViewAllAssessments"
                    style="@style/TextAppearance.Lala.Link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAssessments"
                style="@style/Widget.Lala.RecyclerView.Horizontal"
                android:orientation="horizontal" />

            <!-- Technical Interview Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    style="@style/TextAppearance.Lala.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Technical Interview" />

                <TextView
                    android:id="@+id/textViewAllInterviews"
                    style="@style/TextAppearance.Lala.Link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewInterviews"
                style="@style/Widget.Lala.RecyclerView.Horizontal" />

            <!-- Sharpen Your Skills Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    android:id="@+id/textSharpenTitle"
                    style="@style/TextAppearance.Lala.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sharpen Your Skills" />

                <TextView
                    android:id="@+id/textAllPractice"
                    style="@style/TextAppearance.Lala.Link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Available Courses" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPractice"
                style="@style/Widget.Lala.Card.Practice"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/spacing_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md"
                    android:gravity="center">

                    <TextView
                        style="@style/TextAppearance.Lala.Heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sharpen_description2"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <TextView
                        style="@style/TextAppearance.Lala.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sharpen_description"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>