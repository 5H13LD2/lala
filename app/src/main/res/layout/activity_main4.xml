<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.MainActivity4">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md"
            android:paddingTop="@dimen/spacing_xl">

            <!-- Streak Badge - Modern Futuristic Design -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/streakBadgeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/streak_badge_background"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconStreakBadge"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_lightning_bolt"
                        android:tint="#FFFFFF"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/textStreakCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="day streak"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Day Selector -->
            <LinearLayout
                android:id="@+id/day_selector_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_md">

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_monday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="M"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_tuesday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="T"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_wednesday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="W"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_thursday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="TH"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_friday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="F"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_saturday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="SAT"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>

                <com.labactivity.lala.homepage.DayCircleView
                    android:id="@+id/day_sunday"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_circle_selector"
                    android:text="S"
                    android:gravity="center"
                    android:textColor="@color/day_text_color_selector"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Recent Course & My Library Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    android:id="@+id/textRecentCourse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Course"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textMyLibrary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Library"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                style="@style/Widget.Lala.RecyclerView.Vertical" />

            <!-- Technical Assessment Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    android:id="@+id/textTechAssessmentTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Technical Assessment"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textViewAllAssessments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_accent_secondary"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAssessments"
                style="@style/Widget.Lala.RecyclerView.Horizontal"
                android:orientation="horizontal" />

            <!-- SQL Challenges Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    android:id="@+id/textSQLChallengesTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SQL Challenges"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textViewAllSQLChallenges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_accent_secondary"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSQLChallenges"
                style="@style/Widget.Lala.RecyclerView.Horizontal"
                android:orientation="horizontal" />

            <!-- Technical Interview Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Technical Interview"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textViewAllInterviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_accent_secondary"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewInterviews"
                style="@style/Widget.Lala.RecyclerView.Horizontal" />

            <!-- Sharpen Your Skills Section -->
            <LinearLayout
                style="@style/Widget.Lala.SectionHeader">

                <TextView
                    android:id="@+id/textSharpenTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sharpen Your Skills"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textAllPractice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Available Courses"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_accent_secondary"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewPractice"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/modern_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/modern_button_primary"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sharpen_description2"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sharpen_description"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:alpha="0.9" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>