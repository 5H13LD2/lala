<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="80dp"
            android:gravity="center_horizontal"
            >

            <!-- User Profile Picture -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/userProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_placeholder"
                    android:contentDescription="User Profile" />
            </androidx.cardview.widget.CardView>

            <!-- Title Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Lock Emoji + Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Leaderboard Locked"
                    android:textSize="28sp"
                    android:textColor="@color/modern_text_primary"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep learning to unlock!"
                    android:textSize="16sp"
                    android:textColor="@color/modern_text_secondary"
                    android:gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- XP Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/modern_accent"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Current XP -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your XP"
                        android:textSize="16sp"
                        android:textColor="@color/modern_text_secondary"/>

                    <TextView
                        android:id="@+id/currentXpText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current XP: 0"
                        android:textSize="18sp"
                        android:textColor="@color/modern_accent"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/modern_border"
                    android:layout_marginBottom="16dp"/>

                <!-- Required XP -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Required"
                        android:textSize="16sp"
                        android:textColor="@color/modern_text_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500 XP"
                        android:textSize="18sp"
                        android:textColor="@color/modern_text_primary"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/modern_border"
                    android:layout_marginBottom="16dp"/>

                <!-- Still Needed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Still Needed"
                        android:textSize="16sp"
                        android:textColor="@color/modern_text_secondary"/>

                    <TextView
                        android:id="@+id/requiredXpText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Need 500 more XP"
                        android:textSize="18sp"
                        android:textColor="@color/error_red"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Motivational Message Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/modern_accent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’ª Keep Going!"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete courses and quizzes to earn XP and unlock the leaderboard. Challenge yourself and compete with others!"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tips Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ How to Earn XP"
                    android:textSize="18sp"
                    android:textColor="@color/modern_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Tip 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ“"
                        android:textSize="20sp"
                        android:textColor="@color/modern_success"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Complete lessons and modules"
                        android:textSize="14sp"
                        android:textColor="@color/modern_text_secondary"/>
                </LinearLayout>

                <!-- Tip 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ“"
                        android:textSize="20sp"
                        android:textColor="@color/modern_success"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pass quizzes and assessments"
                        android:textSize="14sp"
                        android:textColor="@color/modern_text_secondary"/>
                </LinearLayout>

                <!-- Tip 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ“"
                        android:textSize="20sp"
                        android:textColor="@color/modern_success"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Complete coding challenges"
                        android:textSize="14sp"
                        android:textColor="@color/modern_text_secondary"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Back Button at Top Left -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/backButtonCard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        android:backgroundTint="#FFFFFF">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:tint="@color/modern_primary" />
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>