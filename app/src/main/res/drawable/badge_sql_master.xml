<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Master outer ring (Deep Blue) -->
    <item>
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#B3E5FC"
                android:centerColor="#0277BD"
                android:endColor="#01579B" />
        </shape>
    </item>

    <!-- Middle ring -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="#0277BD" />
        </shape>
    </item>

    <!-- Inner circle -->
    <item android:top="16dp" android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="oval">
            <solid android:color="#4FC3F7" />
        </shape>
    </item>
</layer-list>
