<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Diamond outer ring -->
    <item>
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#E0F7FA"
                android:centerColor="#00BCD4"
                android:endColor="#0097A7" />
        </shape>
    </item>

    <!-- Middle ring -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="#00BCD4" />
        </shape>
    </item>

    <!-- Inner circle -->
    <item android:top="16dp" android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="oval">
            <solid android:color="#B2EBF2" />
        </shape>
    </item>
</layer-list>
