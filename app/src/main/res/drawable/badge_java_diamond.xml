<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Diamond outer ring (Java red theme) -->
    <item>
        <shape android:shape="oval">
            <size android:width="80dp" android:height="80dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#FFCDD2"
                android:centerColor="#F44336"
                android:endColor="#C62828" />
        </shape>
    </item>

    <!-- Middle ring -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="#F44336" />
        </shape>
    </item>

    <!-- Inner circle -->
    <item android:top="16dp" android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="oval">
            <solid android:color="#EF9A9A" />
        </shape>
    </item>

</layer-list>
